{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "packageManager": "yarn@3.2.0",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && yarn build:types",
    "build:types": "tsc -d --declarationDir dist --emitDeclarationOnly",
    "test": "tsdx test",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "name": "@theniledev/js",
  "author": "jrea",
  "module": "dist/nile.esm.js",
  "size-limit": [
    {
      "path": "dist/nile.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nile.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheNileDev/nile-js.git",
    "directory": "lib/nile"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
