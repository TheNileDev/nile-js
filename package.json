{
  "name": "@theniledev/packages",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "lib/nile",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:lib && yarn build:react && yarn build:examples",
    "build:lib": "yarn workspace @theniledev/js build",
    "build:react": "yarn workspace @theniledev/react build",
    "build:examples": "yarn workspace @theniledev/examples build",
    "lint": "yarn eslint . --max-warnings=0",
    "buildDocs": "yarn workspace @theniledev/js typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs true src/index.ts",
    "publish": "yarn lerna publish --registry=https://npm.pkg.github.com/"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.2",
    "eslint-config-prettier": "^8.5.0",
    "husky": "7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "packages/**/**/*.{js,ts,jsx,tsx}": "yarn lint --cache --fix",
    "lib/nile/src/*.{js,ts,jsx,tsx}": "yarn lint --cache --fix"
  }
}
