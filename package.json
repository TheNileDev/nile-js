{
  "name": "nile-js",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "lib/nile",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @nile/js build && yarn workspace dashboard build",
    "lint": "yarn eslint . --max-warnings=0",
    "postinstall": "yarn husky install",
    "buildDocs": "yarn workspace @nile/js typedoc src/index.ts"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "7.0.4",
    "lint-staged": ">=10",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "packages/**/**/*.{js,ts,jsx,tsx}": "yarn lint --cache --fix",
    "lib/nile/src/*.{js,ts,jsx,tsx}": "yarn lint --cache --fix"
  }
}
